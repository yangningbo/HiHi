                    android:drawableRight="@drawable/icon_slide_right_arrow"
                    android:gravity="center_vertical|right"
                    android:text="2kj"
                    android:textColor="@color/profile_text_gray" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/connection_horizon_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="7dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="微博" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/icon_slide_right_arrow"
                    android:gravity="center_vertical|right"
                    android:text="jkhj"
                    android:textColor="@color/profile_text_gray" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/icon_profile_tag"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="人脉标签" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/icon_profile_edit_tag"
                    android:drawablePadding="3dp"
                    android:gravity="center_vertical"
                    android:text="贴标签"
                    android:textColor="@color/profile_name" />
            </RelativeLayout>

            <com.gaopai.guiren.view.FlowLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/white" >
            </com.gaopai.guiren.view.FlowLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/profile_renmai_topbar"
                android:gravity="right|center_vertical"
                android:paddingRight="10dp"
                android:text="显示全部"
                android:textColor="@color/profile_name" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingLeft="10dp" >

                <View
                    android:layout_width="2px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@color/profile_vertical_divider" />

                <ImageView
                    android:id="@+id/iv_profile_favourite"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/icon_profile_favourite" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv_profile_favourite"
                    android:layout_toRightOf="@id/iv_profile_favourite"
                    android:background="@drawable/holder_profile"
                    android:text="阿萨德就会饭卡角色发挥看" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingLeft="10dp" >

                <View
                    android:layout_width="2px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@color/profile_vertical_divider" />

                <ImageView
                    android:id="@+id/iv_profile_favourite"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/icon_profile_spread" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv_profile_favourite"
                    android:layout_toRightOf="@id/iv_profile_favourite"
                    android:background="@drawable/holder_profile"
                    android:text="阿萨德就会饭卡角色发挥看" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingLeft="10dp" >

                <View
                    android:layout_width="2px"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/profile_vertical_divider" />

                <ImageView
                    android:id="@+id/iv_profile_favourite"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/icon_profile_comment" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv_profile_favourite"
                    android:layout_toRightOf="@id/iv_profile_favourite"
                    android:background="@drawable/holder_profile"
                    android:text="阿萨德就会饭卡角色发挥看" />
