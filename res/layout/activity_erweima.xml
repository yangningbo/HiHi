<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:padding="20dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_erweima_round_corner"
        android:padding="20dp" >

        <ImageView
            android:id="@+id/iv_header"
            style="@style/connection_item_header1"
            android:contentDescription="@string/desc" />

        <TextView
            android:id="@+id/tv_user_name"
            style="@style/connection_item_title1"
            android:layout_toRightOf="@id/iv_header"
            android:text="马虎疼"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_user_info"
            style="@style/connection_item_info1"
            android:layout_alignLeft="@id/tv_user_name"
            android:layout_below="@id/tv_user_name"
            android:text="疼惜总裁"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iv_erweima"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/iv_header"
            android:layout_marginTop="@dimen/general_paading"
            android:scaleType="fitXY"
            android:src="@drawable/logo" />

        <View
            android:id="@+id/iv_header1"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignLeft="@id/iv_erweima"
            android:layout_alignTop="@id/iv_erweima"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="72dp"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/iv_header1"
            style="@style/connection_item_header1"
            android:layout_alignLeft="@id/iv_erweima"
            android:layout_alignTop="@id/iv_erweima"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="75dp"
            android:contentDescription="@string/desc" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_erweima"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/general_paading"
            android:gravity="center_horizontal"
            android:text="扫一扫上面的二维码图案，关注我的贵人"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>