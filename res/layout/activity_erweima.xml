<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:padding="20dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_erweima_round_corner"
        android:padding="20dp" >

        <com.gaopai.guiren.support.view.HeadView
            android:id="@+id/layout_header_mvp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp" >

            <ImageView
                android:id="@+id/iv_header"
                style="@style/connection_item_header1"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/layout_header_mvp"
                android:layout_alignRight="@id/layout_header_mvp"
                android:layout_marginBottom="-8dp"
                android:layout_marginRight="-6dp"
                android:src="@drawable/icon_mvp_head"
                android:visibility="gone" />
        </com.gaopai.guiren.support.view.HeadView>

        <TextView
            android:id="@+id/tv_user_name"
            style="@style/connection_item_title1"
            android:singleLine="true"
            android:layout_toRightOf="@id/layout_header_mvp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_user_info"
            style="@style/connection_item_info1"
            android:layout_alignLeft="@id/tv_user_name"
            android:layout_below="@id/tv_user_name"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iv_erweima"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@id/layout_header_mvp"
            android:layout_marginTop="@dimen/general_large_gap"
            android:scaleType="fitXY" />

        <View
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignLeft="@id/iv_erweima"
            android:layout_alignTop="@id/iv_erweima"
            android:layout_marginLeft="107dp"
            android:layout_marginTop="107dp"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/iv_header1"
            style="@style/connection_item_header1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@id/iv_erweima"
            android:layout_alignTop="@id/iv_erweima"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="110dp" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_erweima"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/general_paading"
            android:gravity="center_horizontal"
            android:text="扫一扫上面的二维码图案，关注我的贵人"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>