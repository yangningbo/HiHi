<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/selector_btn_general"
    android:layout_height="match_parent"
    android:padding="@dimen/general_paading"
    android:orientation="horizontal" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_my_fans"
        android:gravity="center_vertical"
        android:drawablePadding="5dp"
        android:text="@string/my_fans" />

    <TextView
        android:id="@+id/tv_fans_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/general_text_gray"
        android:gravity="right"
        android:drawablePadding="5dp"
        android:layout_marginRight="5dp"
        android:drawableRight="@drawable/icon_arrow_right_blue"/>

</LinearLayout>