<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_background"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <RelativeLayout
            android:id="@+id/tv_check_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/privacy_setting_text"
                android:text="允许未关注用户查看手机号码" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_switch_normal" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider" />

        <RelativeLayout
            android:id="@+id/tv_check_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/privacy_setting_text"
                android:text="允许未关注用户查看邮箱" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_switch_normal" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider" />

        <RelativeLayout
            android:id="@+id/tv_check_weixin_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/privacy_setting_text"
                android:text="允许未关注用户查看微信号" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_switch_normal" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider" />

        <RelativeLayout
            android:id="@+id/tv_check_sina_weibo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/privacy_setting_text"
                android:text="允许未关注用户查看我的新浪微博" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_switch_normal" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider" />

        <RelativeLayout
            android:id="@+id/tv_check_connection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/privacy_setting_text"
                android:text="允许未关注用户查看我的人脉" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_switch_normal" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:text="人脉指您的圈子、关注、粉丝"
        android:textColor="@color/setting_tv_gray" />

</LinearLayout>