<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/chat_item_general" />

    <LinearLayout
        android:id="@+id/chat_count"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/zan_count_layout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="40dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/zan_count_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:duplicateParentState="true"
                android:src="@drawable/icon_msg_detail_zan_normal" />

            <TextView
                android:id="@+id/chat_zan_count"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:clickable="false"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/favourite_count_layout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="40dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/favorite_count_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_msg_detail_favorite_normal" />

            <TextView
                android:id="@+id/chat_favourite_count"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment_count_layout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="40dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/comment_count_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_msg_detail_comment_active" />

            <TextView
                android:id="@+id/chat_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/view_cover_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="13dp"
        android:background="@drawable/icon_msg_detail_top_angle"/>

    <LinearLayout
        android:id="@+id/ll_zan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/zan_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@drawable/icon_dynamic_favourite"
            android:drawablePadding="5dp"
            android:padding="5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dynamic_horizon_divider" />
    </LinearLayout>

</LinearLayout>