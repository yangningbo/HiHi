<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff0f0"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp" >

        <View
            android:layout_width="2px"
            android:layout_height="26px"
            android:layout_marginLeft="15dp"
            android:background="@color/profile_vertical_divider" />

        <ImageView
            android:id="@+id/iv_profile_favourite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_profile_favourite" />

        <TextView
            android:id="@+id/tv_bottom_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_profile_favourite"
            android:layout_toRightOf="@id/iv_profile_favourite"
            android:background="@drawable/holder_profile" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp" >

        <View
            android:layout_width="2px"
            android:layout_height="26px"
            android:layout_marginLeft="15dp"
            android:background="@color/profile_vertical_divider" />

        <ImageView
            android:id="@+id/iv_profile_favourite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_profile_spread" />

        <TextView
            android:id="@+id/tv_bottom_spread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_profile_favourite"
            android:layout_toRightOf="@id/iv_profile_favourite"
            android:background="@drawable/holder_profile" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp" >

        <View
            android:layout_width="2px"
            android:layout_height="26px"
            android:layout_marginLeft="15dp"
            android:background="@color/profile_vertical_divider" />

        <ImageView
            android:id="@+id/iv_profile_favourite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_profile_comment" />

        <LinearLayout
            android:id="@+id/layout_bottom_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_profile_favourite"
            android:layout_toRightOf="@id/iv_profile_favourite"
            android:background="@drawable/holder_profile"
            android:orientation="vertical" />
    </RelativeLayout>

</LinearLayout>