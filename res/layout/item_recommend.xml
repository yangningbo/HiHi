<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:padding="10dp" >

    <com.gaopai.guiren.support.view.HeadView
        android:id="@+id/layout_header_mvp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp" >

        <ImageView
            android:id="@+id/iv_header"
            style="@style/connection_item_header1"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_user_header"
            android:layout_alignRight="@id/iv_user_header"
            android:layout_marginBottom="-8dp"
            android:layout_marginRight="-6dp"
            android:src="@drawable/icon_mvp_head"
            android:visibility="gone" />
    </com.gaopai.guiren.support.view.HeadView>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/layout_header_mvp"
        android:layout_toRightOf="@id/layout_header_mvp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/one_word_prompt_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_user_name"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/layout_header_mvp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/content_gray_color"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tv_recommend_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_recommend"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/layout_header_mvp"
        android:ellipsize="end"
        android:singleLine="true"
        android:visibility="gone"
        android:textColor="@color/content_gray_color"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/btn_add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:scaleType="center"
        android:src="@drawable/icon_add_rec_has_follow" />
</RelativeLayout>