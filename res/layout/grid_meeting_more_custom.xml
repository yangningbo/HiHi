<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray_people"
    android:orientation="vertical"
    android:paddingBottom="10dp" >

    <Button
        android:id="@+id/btn_hide_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/icon_meeting_detail_popup_close_btn" />

    <com.gaopai.guiren.view.ChatGridLayout
        android:id="@+id/cgl_meeting_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/grid_enter_meeting"
            style="@style/meeting_detail_more_layout" >

            <ImageView
                style="@style/meeting_detail_more_img"
                android:src="@drawable/icon_meeting_detail_emter_meeting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_meeting" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/grid_want_to_be_guest"
            style="@style/meeting_detail_more_layout" >

            <ImageView
                style="@style/meeting_detail_more_img"
                android:src="@drawable/icon_meeting_detail_apply_guest" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apply_to_jiabin" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/grid_want_to_be_host"
            style="@style/meeting_detail_more_layout" >

            <ImageView
                style="@style/meeting_detail_more_img"
                android:src="@drawable/icon_meeting_detail_apply_host" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apply_to_host" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/grid_notify_meeting_start"
            style="@style/meeting_detail_more_layout" >

            <ImageView
                style="@style/meeting_detail_more_img"
                android:src="@drawable/icon_meeting_detail_notify_meeting_start_on" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notify_meeting_start" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/grid_avoid_disturb"
            style="@style/meeting_detail_more_layout" >

            <ImageView
                style="@style/meeting_detail_more_img"
                android:src="@drawable/level_meeting_detail_avoid_disturb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/avoid_disturb" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/grid_user_real_name"
            style="@style/meeting_detail_more_layout" >

            <ImageView
                style="@style/meeting_detail_more_img"
                android:src="@drawable/icon_meeting_detail_realname_on" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_real_name" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/grid_invite_to_meeting"
            style="@style/meeting_detail_more_layout" >

            <ImageView
                style="@style/meeting_detail_more_img"
                android:src="@drawable/icon_meeting_detail_invite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invite_to_meeting" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/grid_clear_local_msg"
            style="@style/meeting_detail_more_layout" >

            <ImageView
                style="@style/meeting_detail_more_img"
                android:src="@drawable/icon_meeting_detail_clear_msg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clear_local_msg" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/grid_login_out"
            style="@style/meeting_detail_more_layout" >

            <ImageView
                style="@style/meeting_detail_more_img"
                android:src="@drawable/icon_meeting_detail_exit_meeting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exit_meeting" />
        </LinearLayout>
    </com.gaopai.guiren.view.ChatGridLayout>

</LinearLayout>