<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/general_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/general_paading" >

        <Button
            android:id="@+id/btn_upload_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_creat_tribe_upload_pic_btn"
            android:gravity="center" />

        <EditText
            android:id="@+id/et_tribe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/creat_tribe_large_gap"
            android:background="@drawable/shape_white_round_corner"
            android:hint="圈子名称2~15个字符"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_tribe_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/creat_tribe_small_gap"
            android:background="@drawable/shape_white_round_corner"
            android:gravity="top|left"
            android:hint="圈子说明，少于500字符"
            android:lines="6"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/creat_tribe_large_gap"
            android:background="@drawable/shape_white_round_corner"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="隐私设置"
                android:textColor="@color/general_text_black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical|right"
                android:padding="10dp"
                android:text="开放"
                android:textColor="@color/general_text_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/creat_tribe_small_gap"
            android:background="@drawable/shape_white_round_corner"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_round_corner"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="编辑会议标签"
                android:textColor="@color/general_text_black" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/creat_tribe_large_gap"
            android:background="@drawable/shape_white_round_corner"
            android:drawableRight="@drawable/icon_switch_normal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="设置圈子密码"
            android:textColor="@color/general_text_black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/creat_tribe_small_gap"
            android:background="@drawable/shape_white_round_corner"
            android:hint="请输入密码"
            android:padding="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/creat_tribe_small_gap"
            android:background="@drawable/shape_white_round_corner"
            android:hint="请再次输入密码"
            android:padding="10dp" />

        <Button
            android:id="@+id/btn_creat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/creat_tribe_large_gap"
            android:background="@drawable/selector_tribe_detail_btn_blue"
            android:text="创建" />
    </LinearLayout>

</ScrollView>