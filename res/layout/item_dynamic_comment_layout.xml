<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_dynamic_interactive"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/view_cover_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="16.2dp"
        android:src="@drawable/icon_top_angle" />

    <TextView
        android:id="@+id/tv_spread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/general_background_gray"
        android:drawableLeft="@drawable/icon_dynamic_spread"
        android:drawablePadding="5dp"
        android:padding="5dp" 
        android:text="360" />

    <View
        android:id="@+id/line_spread_bottom"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dynamic_horizon_divider"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_zan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/general_background_gray"
        android:drawableLeft="@drawable/icon_dynamic_favourite"
        android:drawablePadding="5dp"
        android:padding="5dp" 
        android:text="百度" />

    <View
        android:id="@+id/line_zan_bottom"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dynamic_horizon_divider"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/general_background_gray"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/tv_more_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@color/general_background_gray"
        android:gravity="right"
        android:padding="5dp" 
        android:text="点击查看全部评论"
        android:textColor="@color/connection_linkfy" />

</LinearLayout>