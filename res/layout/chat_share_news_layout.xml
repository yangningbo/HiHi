<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_msg_info_holder"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:background="@drawable/chat_from_bg" >

    <TextView
        android:id="@+id/news_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="中华人民共和过今天成立了啊啊啊啊啊啊啊啊啊啊"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/news_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/news_title"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/desc"
        android:scaleType="fitXY"
        android:src="@drawable/img_6" />

    <TextView
        android:id="@+id/news_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/news_image"
        android:layout_toRightOf="@id/news_image"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="中华人民共和过今天成立中华人民共和过今天成立中华人民共和过今天成立中华人民共和过今天成立中华人民共和过今天成立中华人民共和过今天成立中华人民共和过今天成立中华人民共和过今天成立中华人民共和过今天成立"
        android:textColor="@color/content_gray_color"
        android:textSize="15sp"
        android:visibility="visible" />

</RelativeLayout>